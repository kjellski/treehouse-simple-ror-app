<div class="page-header">
  <h1>All of the statuses</h1>
</div>

<%= link_to "Post a New Status", new_status_path, class: "btn"  %>

<% @statuses.each do |status| %>
    <div class="status">
      <div class="row">
        <div class="span1">
          <%= link_to image_tag(status.user.gravatar_url), profile_path(status.user) %>
        </div>
        <div class="span7">
          <strong><%= status.user.full_name %></strong>
          <p><%= status.content %></p>
          <div class="meta">
            <%= link_to time_ago_in_words(status.created_at) + " ago", status %>
            <span class="admin">
              | <% if status.user == current_user %>
                  <%= link_to "Edit", edit_status_path(status) %>
                <% else %>
                  <%= link_to "Show", status_path(status) %>
                <% end %>
              | <%= link_to "Delete", status, method: :delete,
                          data: {confirm: "Are you sure to delete this comment?" }%>
            </span>
          </div>
        </div>
      </div>
    </div>
<% end %>