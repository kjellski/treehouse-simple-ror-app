<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { class: "well form-horizontal", :method => :put, multipart: true}) do |f| %>
  <%= devise_error_messages! %>
  <fieldset>
    <legend>Edit <%= resource_name.to_s.humanize %></legend>

    <div><%= f.input :first_name, :autofocus => true %></div>
    <div><%= f.input :last_name %></div>
    <div><%= f.input :profile_name %></div>
    <div><%= f.input :email %></div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div><%= f.input :password, :autocomplete => "off"  %> <i>(leave blank if you don't want to change it)</i></div>

    <div><%= f.input :password_confirmation %></div>

    <div><%= f.input :current_password %> <i>(we need your current password to confirm your changes)</i></div>

    <div><%= f.button :submit, "Update" %></div>

  </fieldset>

  <fieldset>
    <legend>Profile Picture</legend>
    <%= f.input :avatar, as: :file %>
    <% if f.object.avatar? %>
      <div class="control-group">
        <label class="control-label">Current avatar</label>
        <div class="controls">
          <%= image_tag f.object.avatar.url(:small) %>
        </div>
      </div>
    <% end %>
  </fieldset>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %></p>

<%= link_to "Back", :back %>
